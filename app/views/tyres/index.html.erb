<div class="container tyres-container">
  <div class="row">
    <div class="col s12">
      <h3 class="header">Find the perfect match</h3>
      <h5 class="sub-header">Use the filter to find tires</h5>
    </div>
  </div>
  <div class="row">
    <div class="col m3">
      <%= render 'tyres/filter', obj: @brands %>
    </div>
    <div class="col s12 m8 offset-m1">
      <div class="row">
        <% @tyres.each do |tyre| %>
          <div class="col s12 m12">
            <div class="card horizontal">
              <div class="card-image">
                <%= image_tag tyre.image_url.url %>
              </div>
              <div class="card-stacked">
                <div class="card-content">
                  <h3><%= tyre.name.capitalize %></h3>
                  <h5><%= tyre.brand.name %></h5>
                  <ul>
                    <li>Width: <%= tyre.width %></li>
                    <li>Ratio: <%= tyre.ratio %></li>
                    <li>Rim: <%= tyre.rim %></li>
                  </ul>
                  <p>I am a very simple card. I am good at containing small bits of information.</p>
                </div>
                <div class="card-action">
                  <a href="#">View <%= tyre.name %></a>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>