<div class="container tyres-container">
  <div class="row">
    <div class="col s12">
      <h3 class="header">Find the perfect match</h3>
      <h5 class="sub-header">Use the filter to find tyres</h5>
    </div>
  </div>
  <div class="row">
    <div class="col m3">
      <%= render 'tyres/filter', obj: @brands %>
    </div>
    <div class="col s12 m9">
      <div class="row">
        <% @tyres.each do |tyre| %>
          <% if tyre.images.count > 0 %>
            <div class="col s12 m12">
              <div class="card horizontal">
                <div class="card-image">
                  <%= image_tag tyre.images.first.image_url.url %>
                </div>
                <div class="card-stacked">
                  <div class="card-content">
                    <div class="col s7">
                      <h4><%= tyre.name.split.map(&:capitalize) * ' ' %></h4>
                      <h5><%= tyre.brand.name %></h5>
                      <ul>
                        <li><i class="fa fa-info-circle"></i> <%= tyre.width %>/<%= tyre.ratio %> R<%= tyre.rim %></li>
                        <li><i class="fa fa-globe"></i> <%= tyre.made_in %></li>
                        <li><i class="fa fa-calendar"></i> <%= tyre.year %></li>
                      </ul>
                    </div>
                    <div class="col s5">
                      <h4><b>EGP <%= tyre.price %></b></h4>
                      <%= link_to "View Tyre", tyre_path(tyre), class: "waves-effect waves-light btn red darken-3" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>