<div class="container tyres-container">
  <div class="row">
    <div class="col s12">
      <h3 class="header">Find the perfect match</h3>
      <h5 class="sub-header">Use the filter to find tyres</h5>
    </div>
  </div>
  <div class="row">
    <div class="col m3">
      <%= render 'tyres/filter', obj: @brands %>
    </div>
    <div class="col s12 m9">
      <div class="row">
        <% @tyres.each do |tyre| %>
          <div class="col s12 m12">
            <div class="card horizontal">
              <div class="card-image">
                <%= image_tag tyre.image_url.url %>
              </div>
              <div class="card-stacked">
                <div class="card-content">
                  <div class="col s7">
                    <h4><%= tyre.name.split.map(&:capitalize)*' ' %></h4>
                    <h5><%= tyre.brand.name %></h5>
                    <ul>
                      <li>Width: <%= tyre.width %></li>
                      <li>Ratio: <%= tyre.ratio %></li>
                      <li>Rim: <%= tyre.rim %></li>
                    </ul>
                  </div>
                  <div class="col s5">
                    <h4><b>995 EGP</b></h4>
                    <a class="waves-effect waves-light btn red darken-3">View Tyre</a>
                  </div>
                </div>
<!--                <div class="card-action">-->
<!--                  <a href="#">View Tyre</a>-->
<!--                </div>-->
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>